  },
  "author": "Dmitrii Baranov <dmitrii.a.baranov@gmail.com>",
  "keywords": [
    "async",
    "promise",
    "mutex",
    "lock",
    "read-write-lock",
    "latch",
    "barrier",
    "synchronization",
    "concurrency",
    "task-scheduling",
    "microtask",
    "macrotask",
    "animation-frame",
    "async-filter",
    "promise-some",
    "promise-every",
    "promise-none",
    "async-generator",
    "typescript",
    "javascript",
